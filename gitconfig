[color]
    diff = auto
    interactive = auto
    status = auto
    branch = auto
[core]
    quotepath = false
    excludesfile = ~/.gitignore
    editor = /usr/bin/vim
[mergetool]
    keepBackup = true
[merge]
    tool = opendiff
[instaweb]
    httpd = webrick
